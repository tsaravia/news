    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
  <body>


    <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">
        <i class="far fa-compass"></i>
        TakeMeHome
    </a>
    </nav>

    <div class="jumbotron">
    <h1 class="display-2">Stay in touch!</h1>
    <p class="lead">With TakeMeHome you can select your hometown and check the weather, latest news and much more...</p>
    <hr class="my-4">
    <p>Simply find your city below and let the app take you <span class="font-weight-bold">home</span></p>
    </div>
    
    <div class="container mt-5 text-center">
        <h2 class="display-4"> Just answer one question </h2>
    </div>

    <div class="container mt-5 text-center">
    <form action="/news">
    <label>Where is home for you?</label>
    <input type="text" name="location">
    <button type="submit" class="btn btn-primary">Go there</submit>
    </form>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
